{
  "name": "@autorail/code-synapse",
  "version": "0.1.0",
  "description": "An agent-first knowledge engine that transforms code into a structured Knowledge Graph for AI reasoning",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Code-Synapse Contributors",
  "homepage": "https://github.com/code-synapse/code-synapse#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code-synapse/code-synapse.git"
  },
  "bugs": {
    "url": "https://github.com/code-synapse/code-synapse/issues"
  },
  "keywords": [
    "ai",
    "mcp",
    "knowledge-graph",
    "code-analysis",
    "llm",
    "cursor",
    "claude-code",
    "static-analysis",
    "typescript",
    "tree-sitter",
    "cozodb"
  ],
  "bin": {
    "code-synapse": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && pnpm build:ui",
    "build:ui": "cd src/viewer/ui/app && pnpm build",
    "start": "node dist/cli/index.js",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest",
    "test:ci": "vitest --exclude 'src/core/__tests__/*.integration.test.ts' --exclude 'src/mcp/__tests__/tools.test.ts' --exclude 'src/viewer/__tests__/viewer.integration.test.ts' --exclude 'src/core/graph-builder/__tests__/*.test.ts' --exclude 'src/core/indexer/__tests__/coordinator.test.ts' --exclude 'src/core/interfaces/__tests__/IGraphStore.contract.test.ts' --exclude 'src/core/interfaces/__tests__/integration.smoke.test.ts'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@clack/prompts": "^0.11.0",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/transformers": "^3.5.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@tree-sitter-grammars/tree-sitter-toml": "^0.7.0",
    "@tree-sitter-grammars/tree-sitter-yaml": "^0.7.1",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "cozo-node": "^0.7.6",
    "fast-glob": "^3.3.3",
    "minimatch": "^10.1.1",
    "node-llama-cpp": "^3.14.5",
    "openai": "^6.16.0",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "tree-sitter-bash": "^0.25.1",
    "tree-sitter-c": "^0.23.4",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-dart": "^1.0.0",
    "tree-sitter-elixir": "^0.3.4",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-haskell": "^0.23.1",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-json": "^0.24.8",
    "tree-sitter-kotlin": "^0.3.8",
    "tree-sitter-lua": "^2.1.3",
    "tree-sitter-php": "^0.24.2",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-rust": "^0.23.2",
    "tree-sitter-scala": "^0.24.0",
    "tree-sitter-swift": "^0.7.1",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.26.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.0",
    "globals": "^16.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.33.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "cozo-node",
      "onnxruntime-node",
      "node-llama-cpp",
      "esbuild",
      "sharp",
      "@tree-sitter-grammars/tree-sitter-toml",
      "@tree-sitter-grammars/tree-sitter-yaml",
      "tree-sitter-bash",
      "tree-sitter-c",
      "tree-sitter-c-sharp",
      "tree-sitter-cpp",
      "tree-sitter-dart",
      "tree-sitter-elixir",
      "tree-sitter-go",
      "tree-sitter-haskell",
      "tree-sitter-java",
      "tree-sitter-javascript",
      "tree-sitter-json",
      "tree-sitter-kotlin",
      "tree-sitter-lua",
      "tree-sitter-php",
      "tree-sitter-python",
      "tree-sitter-ruby",
      "tree-sitter-rust",
      "tree-sitter-scala",
      "tree-sitter-swift",
      "tree-sitter-typescript",
      "tree-sitter-cli",
      "protobufjs"
    ]
  }
}
